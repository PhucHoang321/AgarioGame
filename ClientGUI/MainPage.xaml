<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientGUI.MainPage">
    <StackLayout Margin="20">

        <Frame x:Name="WelcomeScreen" BackgroundColor="LightGray" WidthRequest="1004" HeightRequest="500">
            <StackLayout VerticalOptions="CenterAndExpand"  IsVisible="True" >
                <Label Text="Welcome to the Game" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
                <Entry BackgroundColor="Beige" Placeholder="Enter your name" x:Name="NameEntry" />
                <Entry BackgroundColor="Beige" Placeholder="Enter host address" x:Name="HostEntry" />
                <Button Text="Start Game" Clicked="StartGame_Clicked" />
            </StackLayout>
        </Frame>
        <Frame  x:Name="GameScreen" IsVisible="False" Padding="5">
            <StackLayout>
                <!-- Add game UI elements here -->
                <Label Text="Game Screen" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
            </StackLayout>
        </Frame>
       
        
    </StackLayout>
</ContentPage>
